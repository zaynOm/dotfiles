  //   },
  //   {
  //     "before": ["c"],
  //     "after": ["\"", "_", "c"]
  //   }
  //   // {
  //   //   "before": ["<leader>", "p"],
  //   //   "after": ["\"", "_", "dP"]
  //   // }
  // ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["H"], // Focus previous tab at the left
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["L"], // Focus next tab at the right
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["Q"], // Close current tab
      "after": ["<C-w>", "q"]
    }
  ],

  "typescript.updateImportsOnFileMove.enabled": "always",
  "dart.flutterSdkPath": "/home/hox/.flutter",
  "explorer.compactFolders": false,
  "editor.minimap.enabled": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "phpsab.executablePathCS": "/home/hox/.local/share/nvim/mason/packages/phpcs/phpcs",
  "codeium.disableSupercomplete": true,
  "files.associations": {
    "*.blade.php": "html"
  },
  "vim.easymotion": true,
  "dart.flutterHotReloadOnSave": "manualIfDirty",
  "dart.hotReloadOnSave": "manualIfDirty",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "chat.commandCenter.enabled": false
}
